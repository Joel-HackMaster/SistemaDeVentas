
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Usuarios</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>
    </div>
</div>
<!--Modal-->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuarios</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="txtId" type="hidden" value="0"/>
                <div class="row g-2">
                    <div class="col-sm-6">
                        <label for="txtNombres" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="txtNombres" placeholder="Escribe aqui" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtApellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="txtApellidos" placeholder="Escribe aqui" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtCorreo" class="form-label">Correo Electronico</label>
                        <input type="email" class="form-control" id="txtCorreo" placeholder="Escribe aqui" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="cboActivo" class="form-label">Activo</label>
                        <select class="form-select" aria-label="Default select example" id="cboActivo">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;
       @*jQuery.ajax({
            url: '@Url.Action("ListarUsuarios","Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data)
            }
        })*@

        tabladata = $("#tabla").DataTable({
            ordering: false,
            responsive: {
                details: false
            },
            columnDefs: [
                { className: "centered", targets: [4, 5] }
                //{ width: "50%", targets: [0] }
            ],
            "language": {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json',
            },
            "ajax": {
                url: '@Url.Action("ListarUsuarios","Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "IdUsuario" },
                { "data": "Nombres" },//aqui es donde se especifica data del HomeController
                { "data": "Apellidos" },
                { "data": "Correo" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge text-bg-primary">Si</span>'
                        } else {
                            return '<span class="badge text-bg-danger">No</span>'
                        }
                    }, "width": "90px"
                },
                {
                    data: null,
                    defaultContent: '<button type="button" class="btn btn-primary btn-sm" id="botonEditar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2" id="botonEliminar"><i class="fas fa-trash"></i></button>',
                    targets: -1,
                    orderable: false,
                    searchable: false,
                    width:"90px"
                }

            ]
        });

        function abrirModal(json) {
            $("#txtId").val(0);
            $("#txtNombres").val("");
            $("#txtApellidos").val("");
            $("#txtCorreo").val("");
            $("#cboActivo").val(1);

            $("#mensajeError").hide();

            if (json != null) {
                $("#txtId").val(json.IdUsuario);
                $("#txtNombres").val(json.Nombres);
                $("#txtApellidos").val(json.Apellidos);
                $("#txtCorreo").val(json.Correo);
                $("#cboActivo").val(json.Activo == true ? 1 : 0);
            }
            $("#FormModal").modal("show");
        }

        $('#tabla').on('click', '#botonEditar',function () {
            filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();

            console.log(data);

            abrirModal(data);



        })

        function Guardar() {
            var Usuario = {
                Activo: $("#cboActivo").val() == 1 ? true : false,
                Apellidos: $("#txtApellidos").val(),
                Correo: $("#txtCorreo").val(),
                IdUsuario: $("#txtId").val(),
                Nombres: $("#txtNombres").val(),
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarUsuario","Home")',
                type: "POST",
                data: JSON.stringify({ objeto: Usuario }), //El nombre del objeto tiene que ser igual al del homecontroller
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) { //data va hacer referencia al objeto devuelto en el homecontroller
                    //Usuario Nuevo
                    if (Usuario.IdUsuario == 0) {
                        if (data.resultado != 0) {
                            Usuario.IdUsuario = data.resultado;
                            tabladata.row.add(Usuario).draw(false);
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        //Usuario Editar
                        if (data.resultado) {
                            console.log(data);
                            tabladata.row(filaSeleccionada).data(Usuario).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                    $(".modal-body").LoadingOverlay("hide");

                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageRisizeFactor: 2,
                        text: "Cargando...",
                        size: 12
                    })
                }

            });

        }

        $('#tabla tbody').on('click', '#botonEliminar', function () {
            var usuarioSeleccionado = $(this).closest("tr");

            var data = tabladata.row(usuarioSeleccionado).data();

            console.log(data);

            swal({
                title: "¿Estas seguro?",
                text: "¿Desea eliminar el usuario?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        jQuery.ajax({
                            url: '@Url.Action("EliminarUsuario","Home")',
                            type: "POST",
                            data: JSON.stringify({ id: data.IdUsuario }), //El nombre del objeto tiene que ser igual al del homecontroller y es lo que vamos a enviar al home controller
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                            success: function (data) {
                                if (data.resultado) {
                                    tabladata.row(usuarioSeleccionado).remove().draw();
                                    swal("Eliminado", "El usuario se borrara permenentemente.", "success");
                                } else {
                                    swal("No se pudo eliminar el usuario", data.mensaje, "error");
                                }
                            },
                            error: function (error) {
                                console.log(error);
                            },

                        });
                    } else {
                        swal("Cancelado", "Operacion Cancelada", "error");
                    }
                });


        })

    </script>
}